<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClassDialogStyle">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="kCalHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="kCalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#29000000</item>
    </style>

    <style name="nutrientsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nutsSummaryCircle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:src">@drawable/nutrients_circle_inside</item>
        <item name="android:background">@drawable/nutrients_circle</item>
    </style>

</resources>